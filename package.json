{
	"name": "typelense",
	"version": "0.1.0",
	"description": "TypeScript error collector for monorepos",
	"type": "module",
	"module": "index.ts",
	"bin": {
		"typelense": "./index.ts"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"start": "bun run src/index.ts",
		"dev": "bun --hot src/index.ts",
		"build": "bun run build.ts",
		"release": "release-it"
	},
	"keywords": [
		"typescript",
		"monorepo",
		"errors",
		"linter",
		"type-checking"
	],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@types/bun": "latest",
		"release-it": "^19.2.3"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"chalk": "^5.6.2",
		"commander": "^14.0.2",
		"fast-glob": "^3.3.3",
		"ora": "^9.0.0",
		"yaml": "^2.8.2"
	}
}
